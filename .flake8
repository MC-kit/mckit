[flake8]
#select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
select = C,E,F,W
max-complexity = 10
max-line-length = 132
ignore = E203,W503
# E203 Whitespace before ‘:'
# W503 Line break before binary operator
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/source/conf.py,
    # Don't chek the adhoc, wrk directories
    adhoc, wrk,
    # This contains our built documentation
    build,
    # This contains builds of flake8 that we don't want to check
    dist,
    # Parser files use a lot of attributes generated with metaclass and not
    # recognized by flake8:w::wqjЖцлоЖоло
    mckit/parser,
    tests/parser
    # __init__ issues to much "imported but not used"
    mckit/cli/commands/__init__.py
per-file-ignores =
    noxfile.py:ANN
    mckit/parser/*:S101,ANN
    tests/*:S101,ANN
    tests/parser/*:S101,ANN

